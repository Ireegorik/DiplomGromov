<Page x:Class="DiplomGromov.Pages.AnswerPractis"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiplomGromov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AnswerPractis">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="202*"/>
            <RowDefinition Height="221*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TextTasks" TextWrapping="Wrap" Grid.ColumnSpan="3" Height="202" Width="800"><Run Text="Блаблабла текст крутого задания, абсолютно так"/></TextBlock>
        <TextBox x:Name="AnswerTasks" Grid.ColumnSpan="3" Height="221" Grid.Row="1" TextWrapping="Wrap" Text="Ответ не очень крутого студента" Width="800"/>
        <Button Content="Ответить" Grid.Column="1" Grid.Row="2" Click="Button_Click"/>

    </Grid>
</Page>
